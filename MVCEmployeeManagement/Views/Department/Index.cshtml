@using MVCEmployeeManagement.Models
@model List<Department> 
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Tüm Departmanlar</h2>

<a class="btn btn-success pull-right">Yeni</a>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Departman Adı</th>
            <th>Açıklama</th>
            <th>#</th>
            
        </tr>
    </thead>
    <tbody>
        @{
            Department department;
            for (int i = 0; i < Model.Count; i++)
            {
                department = Model[i];
                <tr>
                    <td>@department.Name</td>
                    <td>@department.Description</td>
                    <td><a href="~/Department/Edit/@department.ID" class="btn btn-default btn-xs">Düzenle</a> | <a href="#" class="btn btn-default btn-xs">Sil</a></td>
                    
                </tr>
            }


         }
    </tbody>
</table>

