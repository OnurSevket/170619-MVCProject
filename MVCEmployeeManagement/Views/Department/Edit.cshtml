@using MVCEmployeeManagement.Models
@model Department
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-xs-12 col-sm-6">

        

        <form action="/Department/EditConfirmed" method="post">
            <input type="hidden" name="id" value="@Model.ID" />

           <div class="form-group">
               <label for="name">Departman Adı</label>
               <input type="text" id="name" class="form-control" name="name" value="@Model.Name" />
           </div>
            <div class="form-group">
                <label for="description">Açıklama</label>
                <textarea id="description" name="description" class="form-control">@Model.Description</textarea>
            </div>
            <div class="form-group">
                <a href="~/Department/Index" class="btn btn-warning">İptal</a>
                <button type="submit" class="btn btn-primary">Güncelle</button>
            </div>
   
        </form>
    </div>
    <div class="col-xs-12 col-sm-6">

    </div>
</div>

